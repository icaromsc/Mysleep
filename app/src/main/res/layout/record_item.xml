<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:weightSum="1">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/audio_icon"
        android:id="@+id/imageView4"
        android:layout_margin="1dp"
        android:layout_weight="0.3" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/pallete_white"
            android:text="12/12/2012"
            android:textSize="14sp"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/txt_item_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pallete_white"
            android:text="horário: 16:47"
            android:textSize="10sp"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/txt_item_duracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pallete_white"
            android:padding="2dp"
            android:textSize="10sp"
            android:text="duração: 01:47:22"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/pallete_white"
        android:text="finalizado upload"
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_weight="0.3"
        />


</LinearLayout>